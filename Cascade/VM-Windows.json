{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "VMname": {
      "type": "string",
      "metadata": {
        "description": "Name for VM, will be used for the the Public IP DNS by default."
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "adminlocal",
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    },
    "AddPublicIPAddress": {
      "type": "string",
      "allowedValues": [
        "yes",
        "no"
      ],
      "defaultValue": "yes",
      "metadata": {
        "description": "Select whether the VM should have a public IP or not."
      }
    },
    "dnsLabelPrefix": {
      "type": "string",
      "defaultValue": "[Parameters('VMname')]",
      "metadata": {
        "description": "Unique DNS Name for the Public IP used to access the Virtual Machine."
      }
    },
    "windowsOSVersion": {
      "type": "string",
      "defaultValue": "2019-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "2016-Nano-Server",
        "2016-Datacenter-with-Containers",
        "2016-Datacenter",
        "2019-Datacenter"
      ],
      "metadata": {
        "description": "The Windows version for the VM. This will pick a fully patched image of this given Windows version."
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_B2s"

    },
    "newOrExistingVnet": {
      "type": "string",
      "allowedValues": [
        "new",
        "existing"
      ]
    },
    "virtualNetworkName": {
      "type": "string"
    },
    "subnetName": {
      "type": "string"
    },
    "PowershellDSC_url": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "URL du zip de la config Powershell DSC à appliquer à la VM si besoin"
      }
    },
    "PowershellDSC_script": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "script à appliquer à la VM si besoin"
      }
    },
    "PowershellDSC_fonction": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "nom de la fonction de configuration à appliquer à la VM si besoin"
      }
    },
    "tagValues": {
      "type": "object",
      "defaultValue": {
        "Environment": "TESTS",
        "deploiement": "ARM Template"
      }
    }
  },
  "variables": {
    "nicName": "[if(equals(parameters('AddPublicIPAddress'), 'yes'), concat(parameters('VMname'),'-NICpIP'), concat(parameters('VMname'),'-NIC'))]",
    "VNETtemplatelink": "[concat('https://github.com/mathuieu/Azure-Templates/raw/master/Cascade/',parameters('newOrExistingVnet'),'-vnet.json')]",
    "publicIPtemplateURL": "https://github.com/mathuieu/Azure-Templates/raw/master/Cascade/IP.json",
    "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "vNetlinkedTemplate",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('VNETtemplatelink')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetworkName": {
            "value": "[parameters('virtualNetworkName')]"
          },
          "subnetName": {
            "value": "[parameters('subnetName')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "condition": "[equals(parameters('AddPublicIPAddress'), 'yes')]",
      "apiVersion": "2015-01-01",
      "name": "publicIPlinkedTemplate",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('publicIPtemplateURL')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "dnsLabelPrefix": {
            "value": "[parameters('dnsLabelPrefix')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "condition": "[equals(parameters('AddPublicIPAddress'), 'yes')]",
      "apiVersion": "2016-03-30",
      "name": "[concat(parameters('VMname'),'-NICpIP')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments/', 'vNetlinkedTemplate')]",
        "[resourceId('Microsoft.Resources/deployments/', 'publicIPlinkedTemplate')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',concat('IP-', parameters('dnsLabelPrefix')))]"
              },
              "subnet": {
                "id": "[variables('subnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "condition": "[equals(parameters('AddPublicIPAddress'), 'no')]",
      "apiVersion": "2016-03-30",
      "name": "[concat(parameters('VMname'),'-NIC')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments/', 'vNetlinkedTemplate')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('subnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2016-04-30-preview",
      "name": "[parameters('VMname')]",
      "location": "[resourceGroup().location]",
      "tags": "[parameters('tagValues')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces/', variables('nicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('VMname')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('windowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('VMname'),'-OSdisk')]",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "Standard_LRS"
            }
          },
          "dataDisks": [
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
            }
          ]
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('VMname'),'/', 'BGinfoExtension')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('VMname'))]"
      ],
      "properties": {
        "autoUpgradeMinorVersion": true,
        "publisher": "Microsoft.Compute",
        "type": "BGInfo",
        "typeHandlerVersion": "2.1",
        "settings": {
        },
        "protectedSettings": null
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('VMname'),'/', 'DSCextension')]",
      "condition": "[not(equals(parameters('PowershellDSC_url'), ''))]",
      "apiVersion": "2019-07-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('VMname'))]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.19",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "modulesUrl": "[parameters('PowershellDSC_url')]",
          "configurationFunction": "[parameters('PowershellDSC_fonction')]",
          "configuration": {
            "url": "[parameters('PowershellDSC_url')]",
            "script": "[parameters('PowershellDSC_script')]",
            "function": "[parameters('PowershellDSC_fonction')]"
          }
        },
        "protectedSettings": {
        }
      }
    }
  ],
  "outputs": {
  }
}